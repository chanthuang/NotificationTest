<resources>

    <style name="NotificationTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.StatusBar.EventContent.Title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NotificationAuthor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.StatusBar.EventContent.Line2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NotificationButton">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.StatusBar.EventContent.Info</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NotificationButton.stretch" parent="NotificationButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="NotificationButton.shrink" parent="NotificationButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
